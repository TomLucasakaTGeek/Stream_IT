# Lightning Stream MVP - Environment Variables
# Copy this file to .env.local and fill in your values

# API Configuration
VITE_API_URL=http://localhost:3001

# Lightning Network
VITE_INVOICE_AMOUNT_SATS=100
VITE_LIGHTNING_NETWORK=testnet

# Video Streaming
VITE_VIDEO_CDN_URL=https://videos.pexels.com

# Analytics (Optional)
VITE_GOOGLE_ANALYTICS_ID=
VITE_PLAUSIBLE_DOMAIN=

# Error Tracking (Optional)
VITE_SENTRY_DSN=

# Feature Flags
VITE_ENABLE_PERSISTENCE=true
VITE_ENABLE_ANALYTICS=false

# Development
VITE_DEBUG_MODE=false
